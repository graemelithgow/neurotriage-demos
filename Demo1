<script>
    // NHS-appropriate data simulation
    document.addEventListener('DOMContentLoaded', function() {
        // Initialize counters
        const participantEl = document.getElementById('participants');
        const geneticHitsEl = document.getElementById('genetic-hits');
        const connectomesEl = document.getElementById('connectomes');
        const effectSizeEl = document.getElementById('effect-size');
        const computeUsageEl = document.getElementById('compute-usage');
        const daysRemainingEl = document.getElementById('days-remaining');
        
        let participants = 7842;
        let hits = 3;
        let connectomes = 824;
        let effectSize = 0.58;
        let computeUsage = 78;
        let daysRemaining = 142;
        
        // Activity container
        const activityContainer = document.querySelector('.activity-container');
        
        // Function to add activity entry
        function addActivity(iconClass, iconColor, message) {
            const timestamp = new Date();
            const timeStr = timestamp.toLocaleTimeString('en-GB', {
                hour: '2-digit', 
                minute: '2-digit',
                hour12: false
            }) + ' GMT';
            
            const activityItem = document.createElement('div');
            activityItem.className = 'activity-item';
            activityItem.innerHTML = `
                <div class="activity-icon ${iconColor}">
                    <i class="${iconClass}"></i>
                </div>
                <div class="activity-content">
                    <div class="activity-time">${timeStr}</div>
                    <div class="activity-message">${message}</div>
                </div>
            `;
            
            activityContainer.insertBefore(activityItem, activityContainer.firstChild);
            
            // Keep only last 8 entries
            if (activityContainer.children.length > 8) {
                activityContainer.removeChild(activityContainer.lastChild);
            }
        }
        
        // Professional NHS-appropriate updates
        setInterval(() => {
            // Gradual participant increase
            const newParticipants = participants + Math.floor(Math.random() * 15);
            participantEl.textContent = newParticipants.toLocaleString();
            participants = newParticipants;
            
            // Update progress bars
            const progress = Math.min(1, participants / 10000);
            document.querySelector('.progress-participants').style.width = `${progress * 100}%`;
            document.querySelector('.milestone-fill.progress-participants').style.width = `${progress * 100}%`;
            
            // Occasional genetic discoveries
            if (Math.random() > 0.92 && hits < 5) {
                hits++;
                geneticHitsEl.textContent = hits;
                const progressPercent = (hits/5)*100;
                document.querySelector('.progress-genetics').style.width = `${progressPercent}%`;
                document.querySelector('.milestone-fill.progress-genetics').style.width = `${progressPercent}%`;
                
                const genes = ['FOXG1', 'TCF4', 'BDNF', 'HTR2A', 'AVPR1A'];
                const gene = genes[Math.floor(Math.random() * genes.length)];
                const pValue = `${(Math.random() * 9 + 1).toFixed(1)}√ó10‚Åª${Math.floor(Math.random() * 3) + 8}`;
                
                addActivity('fas fa-flask', 'icon-success', `Novel genetic association identified: ${gene} (p=${pValue})`);
            }
            
            // Update other metrics
            connectomes += Math.floor(Math.random() * 5);
            connectomesEl.textContent = connectomes;
            const connectomeProgress = Math.min(100, (connectomes/1200)*100);
            document.querySelector('.progress-neural').style.width = `${connectomeProgress}%`;
            document.querySelector('.milestone-fill.progress-neural').style.width = `${connectomeProgress}%`;
            
            effectSize = Math.min(0.7, effectSize + (Math.random() * 0.003));
            effectSizeEl.textContent = effectSize.toFixed(2);
            document.querySelector('.progress-analysis').style.width = `${(effectSize/0.7)*100}%`;
            document.querySelector('.milestone-fill.progress-analysis').style.width = `${(effectSize/0.7)*100}%`;
            
            computeUsage = 70 + Math.floor(Math.random() * 15);
            computeUsageEl.textContent = `${computeUsage}%`;
            document.querySelector('.progress-compute').style.width = `${computeUsage}%`;
            
            daysRemaining -= 0.01;
            daysRemainingEl.textContent = Math.floor(daysRemaining);
            document.querySelector('.progress-timeline').style.width = `${(1 - (daysRemaining/180)) * 100}%`;
            
            // Professional activity updates
            if (Math.random() > 0.8) {
                const activities = [
                    'NHS Digital patient cohort successfully contacted',
                    'Ethics approval received for extended data collection',
                    'Quality assurance checks completed on neuroimaging data',
                    'Cross-validation with European cohorts initiated',
                    'Clinical advisory board meeting scheduled',
                    'Interim findings prepared for NIHR review'
                ];
                const activity = activities[Math.floor(Math.random() * activities.length)];
                
                addActivity('fas fa-info-circle', 'icon-info', activity);
            }
            
            if (Math.random() > 0.85) {
                const systemUpdates = [
                    'Automated quality control pipeline processing complete',
                    'Data backup to NHS secure cloud storage successful',
                    'Research database synchronisation with UK Biobank completed',
                    'Statistical analysis cluster auto-scaled to meet demand'
                ];
                const update = systemUpdates[Math.floor(Math.random() * systemUpdates.length)];
                
                addActivity('fas fa-cog', 'icon-success', update);
            }
            
            // Occasional breakthrough
            if (Math.random() > 0.98) {
                addActivity('fas fa-trophy', 'icon-success', 'Breakthrough: Novel neurocognitive pathway validated across multiple cohorts');
            }
            
        }, 2000); // Slower, more professional update rate
    });
</script>
```

</body>
</html>
